<svg
  class="profession-icon w-24 h-24 md:w-32 md:h-32 text-warm-900 dark:text-dark-900 transition-all duration-300"
  viewBox="0 0 120 120"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  aria-hidden="true"
>
  <!-- Left bracket < -->
  <g class="bracket-left">
    <path
      d="M 50 35 L 30 60 L 50 85"
      stroke="currentColor"
      stroke-width="3"
      stroke-linecap="round"
      stroke-linejoin="round"
      fill="none"
    />
  </g>

  <!-- Right bracket > -->
  <g class="bracket-right">
    <path
      d="M 70 35 L 90 60 L 70 85"
      stroke="currentColor"
      stroke-width="3"
      stroke-linecap="round"
      stroke-linejoin="round"
      fill="none"
    />
  </g>

  <!-- Cursor -->
  <rect
    class="cursor-blink"
    x="57"
    y="50"
    width="3"
    height="20"
    fill="currentColor"
  />

  <!-- Code lines (decorative) -->
  <g class="code-lines" opacity="0.3">
    <line x1="40" y1="45" x2="48" y2="45" stroke="currentColor" stroke-width="1.5" />
    <line x1="40" y1="50" x2="45" y2="50" stroke="currentColor" stroke-width="1.5" />
    <line x1="72" y1="65" x2="80" y2="65" stroke="currentColor" stroke-width="1.5" />
