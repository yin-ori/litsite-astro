  <line
    class="code-slash"
    x1="55"
    y1="30"
    x2="65"
    y2="90"
    stroke="currentColor"
    stroke-width="1"
    opacity="0.2"
  />
</svg>

<style>
  .profession-icon {
    transform-origin: center;
  }

  /* Bracket expand animation */
  .bracket-left {
    transform-origin: 40px 60px;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .bracket-right {
    transform-origin: 80px 60px;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Cursor blink */
  .cursor-blink {
    animation: cursor-fade 1.2s ease-in-out infinite;
  }

  /* Code lines subtle animation */
  .code-lines {
    transition: opacity 0.3s ease;
  }

  .code-slash {
    transition: opacity 0.3s ease;
  }

  /* Hover animations - triggered by parent group hover */
  :global(.group:hover) .bracket-left {
    transform: translateX(-4px);
  }

  :global(.group:hover) .bracket-right {
    transform: translateX(4px);
  }

  :global(.group:hover) .code-lines {
    opacity: 0.5;
    animation: code-flicker 0.8s ease-in-out infinite;
  }

  :global(.group:hover) .code-slash {
    opacity: 0.4;
  }

  @keyframes cursor-fade {
    0%, 49% {
      opacity: 1;
    }
    50%, 100% {
      opacity: 0;
    }
  }

  @keyframes code-flicker {
    0%, 100% {
      opacity: 0.3;
    }
    50% {
      opacity: 0.6;
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .profession-icon,
    .bracket-left,
    .bracket-right,
    .cursor-blink,
    .code-lines,
    .code-slash {
      animation: none !important;
      transition: none !important;
    }

    .cursor-blink {
      opacity: 1;
    }
  }
</style>
