---
import type { Locale } from '@/utils/i18n';
import { useTranslations, getLocalizedPath } from '@/utils/i18n';
import AcademiaIcon from '@/components/icons/AcademiaIcon.astro';
import ProfessionIcon from '@/components/icons/ProfessionIcon.astro';

export interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = useTranslations(locale);

const academiaLabel = t('landing.academia');
const professionLabel = t('landing.profession');

const academiaLink = getLocalizedPath('/research', locale);
const professionLink = getLocalizedPath('/profession', locale);
---

<div class="diagonal-container">
  <!-- Left Section: Academia/Research -->
  <a
    href={academiaLink}
    class="section-left section-clickable group"
    aria-label={academiaLabel}
  >
    <div class="content-wrapper content-left">
      <AcademiaIcon />
      <h1 class="section-label">{academiaLabel}</h1>
    </div>
  </a>

  <!-- Right Section: Profession -->
  <a
    href={professionLink}
    class="section-right section-clickable group"
    aria-label={professionLabel}
  >
    <div class="content-wrapper content-right">
      <ProfessionIcon />
      <h1 class="section-label">{professionLabel}</h1>
    </div>
  </a>

</div>

<style>
  /* Container */
  .diagonal-container {
    position: relative;
    width: 100%;
    height: 100vh;
    min-height: 600px;
    overflow: hidden;
  }

  /* Common section styles */
  .section-clickable {
    position: absolute;
    top: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    text-decoration: none;
    cursor: pointer;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .section-clickable:focus-visible {
    outline: 3px solid #7d6ba2;
    outline-offset: -3px;
    z-index: 10;
  }

  /* Left Section - Academia */
  .section-left {
    left: 0;
    width: 50%;
    background: #faf8f5;
    z-index: 1;
  }

  :global(.dark) .section-left {
    background: #1a1814;
  }

  /* Right Section - Profession */
  .section-right {
    right: 0;
    width: 50%;
    background: #f5f3f0;
    z-index: 1;
  }

  :global(.dark) .section-right {
    background: #252118;
  }

  /* Mobile: Vertical stack */
  @media (max-width: 767px) {
    .diagonal-container {
      display: flex;
      flex-direction: column;
      height: auto;
      min-height: 100vh;
    }

    .section-left,
    .section-right {
      position: relative;
      width: 100%;
      height: 50vh;
      min-height: 400px;
    }

    .section-left {
      border-bottom: 2px solid rgba(0, 0, 0, 0.1);
    }

    :global(.dark) .section-left {
      border-bottom-color: rgba(255, 255, 255, 0.1);
    }
  }

  /* Content wrapper */
  .content-wrapper {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    width: 100%;
  }

  /* Left content positioning */
  @media (min-width: 768px) {
    .content-left {
      padding-left: 10%;
      padding-right: 5%;
    }

    .content-right {
      padding-right: 10%;
      padding-left: 5%;
    }
  }

  /* Section label */
  .section-label {
    font-family: Georgia, 'Lora', serif;
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 400;
    letter-spacing: 0.08em;
    color: #3a3a3a;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.08);
    user-select: none;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    margin: 0;
  }

  :global(.dark) .section-label {
    color: #f0ede8;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.4);
  }

  /* Hover effects */
  @media (hover: hover) and (min-width: 768px) {
    .section-clickable:hover {
      transform: scale(1.02);
    }

    .section-clickable:hover .section-label {
      transform: scale(1.05);
    }
  }

  /* Click slide-out animation */
  .section-clickable.slide-out-left {
    animation: slideOutLeft 0.4s cubic-bezier(0.4, 0, 1, 1) forwards;
  }

  .section-clickable.slide-out-right {
    animation: slideOutRight 0.4s cubic-bezier(0.4, 0, 1, 1) forwards;
  }

  @keyframes slideOutLeft {
    to {
      transform: translateX(-100%);
    }
  }

  @keyframes slideOutRight {
    to {
      transform: translateX(100%);
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .section-clickable,
    .section-label,
    .section-clickable.slide-out-left,
    .section-clickable.slide-out-right {
      animation: none !important;
      transition: none !important;
    }
  }
</style>

<script>
  // Click animation handler
  document.addEventListener('DOMContentLoaded', () => {
    const sections = document.querySelectorAll<HTMLAnchorElement>('.section-clickable');

    sections.forEach((section) => {
      section.addEventListener('click', (e) => {
        // Check if user prefers reduced motion
        const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

        if (prefersReducedMotion) {
          // Skip animation, navigate immediately
          return;
        }

        e.preventDefault();
        const href = section.getAttribute('href');

        if (!href) return;

        // Add slide-out animation class
        if (section.classList.contains('section-left')) {
          section.classList.add('slide-out-left');
        } else {
          section.classList.add('slide-out-right');
        }

        // Navigate after animation
        setTimeout(() => {
          window.location.href = href;
        }, 400);
      });
    });
  });
</script>
