---
export interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;

// Generate unique ID for this toggle instance
const uniqueId = crypto.randomUUID().slice(0, 8);
const toggleId = `dark-mode-toggle-${uniqueId}`;
---

<button
  type="button"
  id={toggleId}
  class={`p-2 rounded-md text-warm-700 hover:text-warm-900 dark:text-dark-500 dark:hover:text-dark-900 transition-colors ${className}`}
  aria-label="Toggle dark mode"
  title="Toggle dark mode"
>
  <!-- Sun icon (visible in dark mode) -->
  <svg
    class="w-4 h-4 hidden dark:block"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
    xmlns="http://www.w3.org/2000/svg"
    aria-hidden="true"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
    ></path>
  </svg>

  <!-- Moon icon (visible in light mode) -->
  <svg
    class="w-4 h-4 block dark:hidden"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
    xmlns="http://www.w3.org/2000/svg"
    aria-hidden="true"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
    ></path>
  </svg>
</button>

<script define:vars={{ toggleId }}>
  const toggle = document.getElementById(toggleId);

  if (toggle) {
    // Check for saved theme preference or default to 'light'
    const getTheme = () => {
      if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
        return localStorage.getItem('theme');
      }
      // Always default to light mode regardless of system preference
      return 'light';
    };

    const setTheme = (theme) => {
      if (theme === 'light') {
        document.documentElement.classList.remove('dark');
      } else {
        document.documentElement.classList.add('dark');
      }
      localStorage.setItem('theme', theme);
    };

    // Initialize theme
    setTheme(getTheme());

    // Toggle theme on button click
    toggle.addEventListener('click', () => {
      const currentTheme = getTheme();
      const newTheme = currentTheme === 'light' ? 'dark' : 'light';
      setTheme(newTheme);
    });

    // Note: No longer listening for system theme changes
    // Users must explicitly choose their theme preference
  }
</script>