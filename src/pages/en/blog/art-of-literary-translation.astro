---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getEntry } from 'astro:content';

const entry = await getEntry('blog', 'en/art-of-literary-translation');
const { Content } = await entry.render();
const { title, description, locale, keywords, publishedDate, readTime } = entry.data;

const article = {
  publishedTime: entry.data.publishedDate,
  modifiedTime: entry.data.modifiedDate,
  author: entry.data.author,
};
---

<BaseLayout
  title={`${title} - JM Sugawara`}
  description={description}
  locale={locale}
  keywords={keywords}
  article={article}
>
  <div class="min-h-screen bg-warm-50 dark:bg-dark-50">
    <div class="max-w-2xl mx-auto px-6 py-16">
      <!-- Article header -->
      <header class="mb-12">
        <div class="mb-4">
          <a
            href="/en/blog"
            class="text-warm-600 dark:text-dark-600 hover:text-warm-900 dark:hover:text-dark-900 transition-colors text-sm underline underline-offset-4"
          >
            Back to Blog
          </a>
        </div>

        <h1 class="text-2xl font-medium text-warm-900 dark:text-dark-900 mb-4">
          {title}
        </h1>

        <div class="flex items-center space-x-4 text-warm-600 dark:text-dark-600 text-sm">
          <time datetime={publishedDate}>
            {new Date(publishedDate).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          <span>â€¢</span>
          <span>{readTime}</span>
        </div>
      </header>

      <!-- Article content -->
      <article class="prose-blog">
        <Content />
      </article>

      <!-- Article footer -->
      <footer class="mt-16 pt-8 border-t border-warm-300 dark:border-dark-300">
        <p class="text-warm-600 dark:text-dark-600 text-sm mb-4">
          Interested in literary translation services?
        </p>
        <a
          href="/en/contact"
          class="text-warm-900 dark:text-dark-900 hover:text-warm-700 dark:hover:text-dark-700 transition-colors underline underline-offset-4"
        >
          Get in touch
        </a>
      </footer>
    </div>
  </div>
</BaseLayout>

<style is:global>
  .prose-blog {
    @apply text-warm-700 dark:text-dark-700 leading-relaxed;
  }

  .prose-blog h2 {
    @apply text-lg font-medium text-warm-900 dark:text-dark-900 mt-8 mb-4;
  }

  .prose-blog h3 {
    @apply text-base font-medium text-warm-900 dark:text-dark-900 mt-6 mb-3;
  }

  .prose-blog p {
    @apply mb-6;
  }

  .prose-blog strong {
    @apply text-warm-900 dark:text-dark-900 font-medium;
  }

  .prose-blog em {
    @apply italic;
  }

  .prose-blog a {
    @apply text-warm-900 dark:text-dark-900 hover:text-warm-700 dark:hover:text-dark-700 transition-colors underline underline-offset-4;
  }

  .prose-blog ul, .prose-blog ol {
    @apply my-6 space-y-2 ml-6;
  }

  .prose-blog li {
    @apply leading-relaxed;
  }
</style>
