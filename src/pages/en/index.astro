---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { useTranslations, getLocalizedPath } from '@/utils/i18n';

const locale = 'en';
const t = useTranslations(locale);

const title = t('site.title');
const description = t('site.description');

const tiles = [
  {
    title: 'About',
    description: 'Learn more about my expertise and approach',
    href: '/about',
  },
  {
    title: 'Research',
    description: 'Insights into my academic work and research focus',
    href: '/research',
  },
  {
    title: 'Services',
    description: 'Translation, proofreading and research consulting',
    href: '/services',
  },
  {
    title: 'Blog',
    description: 'Thoughts on language, culture and translation',
    href: '/blog',
  },
  {
    title: 'Contact',
    description: 'Get in touch with me',
    href: '/contact',
  },
];
---

<BaseLayout
  title={title}
  description={description}
  locale={locale}
  keywords={['Japanese studies', 'translation', 'English', 'German', 'Japanese', 'intercultural']}
>
  <div class="min-h-[calc(100vh-200px)] bg-warm-50 dark:bg-dark-50 flex items-center">
    <div class="max-w-2xl mx-auto px-6 py-16 w-full">
      <!-- Minimal intro -->
      <div class="mb-16 text-center">
        <h1 class="text-2xl font-medium text-warm-900 dark:text-dark-900 mb-3">
          JM Sugawara
        </h1>
        <p class="text-warm-700 dark:text-dark-700">
          Japanese Studies, Translation & Intercultural Bridges
        </p>
      </div>

      <!-- Tile grid -->
      <div class="grid grid-cols-1 gap-4">
        {tiles.map((tile) => (
          <a
            href={getLocalizedPath(tile.href, locale)}
            class="block p-6 bg-white dark:bg-dark-100 border border-warm-200 dark:border-dark-300 border-l-2 border-l-transparent hover:border-l-[#bfaedc] transition-all"
            style="box-shadow: 0 1px 2px rgba(0, 0, 0, 0.04);"
          >
            <h2 class="text-lg font-medium text-warm-900 dark:text-dark-900 mb-2">
              {tile.title}
            </h2>
            <p class="text-sm text-warm-600 dark:text-dark-600">
              {tile.description}
            </p>
          </a>
        ))}
      </div>
    </div>
  </div>
</BaseLayout>
