---
import ServicesOverviewTemplate from '@/components/templates/ServicesOverviewTemplate.astro';
import { useTranslations } from '@/utils/i18n';

const locale = 'en';
const t = useTranslations(locale);

const title = t('services.title');
const description = t('services.description');

const services = [
  {
    title: 'Research Consulting',
    description: 'Professional consulting for research projects in linguistics, cultural studies, and intercultural studies between Germany and Japan.',
    link: '/en/services/workshop',
    linkText: 'More about research consulting'
  },
  {
    title: 'Proofreading',
    description: 'Comprehensive proofreading and editing services to ensure your translated texts maintain natural flow while preserving accuracy and cultural authenticity.',
    link: '/en/services/proofreading',
    linkText: 'More about proofreading'
  },
  {
    title: 'Translation',
    description: 'Professional translation services between German and Japanese, specializing in literary and academic texts that require cultural sensitivity and linguistic precision.',
    link: '/en/services/translation',
    linkText: 'More about translation'
  }
];
---

<ServicesOverviewTemplate
  title={title}
  description={description}
  locale={locale}
  keywords={['services', 'translation', 'proofreading', 'research consulting', 'German', 'Japanese', 'English']}
  pageTitle="Services"
  subtitle="Language services tailored to your specific needs."
  services={services}
  ctaText="Ready to start your project?"
  ctaLink="/en/contact"
  ctaLinkText="Get in touch"
/>
