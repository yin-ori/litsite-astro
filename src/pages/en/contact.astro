---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { useTranslations } from '@/utils/i18n';
import { SITE_CONFIG } from '@/constants/site';

const locale = 'en';
const t = useTranslations(locale);

const title = t('contact.title');
const description = t('contact.description');
---

<BaseLayout
  title={title}
  description={description}
  locale={locale}
  keywords={['contact', 'translation', 'services', 'inquiry']}
>
  <div class="min-h-screen bg-warm-50 dark:bg-dark-50">
    <div class="max-w-2xl mx-auto px-6 py-16">
      <!-- Simple header -->
      <div class="mb-16">
        <h1 class="text-2xl font-medium text-warm-900 dark:text-dark-900 mb-6">Contact</h1>
        <p class="text-warm-700 dark:text-dark-700 leading-relaxed">
          Want to discuss your translation or proofreading project? Get in touch to start the conversation.
        </p>
      </div>

      <!-- Simple contact form -->
      <div>
        <h2 class="text-lg font-medium text-warm-900 dark:text-dark-900 mb-6">Send a Message</h2>

        <form
          class="space-y-6"
          action="https://formspree.io/f/xblgaqbj"
          method="POST"
        >
          <div class="space-y-4">
            <div>
              <input
                type="text"
                name="name"
                placeholder="Your Name"
                required
                class="w-full px-0 py-3 bg-transparent border-0 border-b border-warm-300 dark:border-dark-300 focus:border-warm-700 dark:focus:border-dark-700 focus:outline-none text-warm-900 dark:text-dark-900 placeholder-warm-500 dark:placeholder-dark-500 transition-colors"
              />
            </div>

            <div>
              <input
                type="email"
                name="email"
                placeholder="Your Email Address"
                required
                class="w-full px-0 py-3 bg-transparent border-0 border-b border-warm-300 dark:border-dark-300 focus:border-warm-700 dark:focus:border-dark-700 focus:outline-none text-warm-900 dark:text-dark-900 placeholder-warm-500 dark:placeholder-dark-500 transition-colors"
              />
            </div>

            <div>
              <select
                name="service"
                required
                class="w-full px-0 py-3 bg-transparent border-0 border-b border-warm-300 dark:border-dark-300 focus:border-warm-700 dark:focus:border-dark-700 focus:outline-none text-warm-900 dark:text-dark-900 transition-colors"
              >
                <option value="">Select Service Type</option>
                <option value="translation">Translation</option>
                <option value="proofreading">Proofreading</option>
                <option value="consultation">Consultation</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div>
              <textarea
                name="message"
                placeholder="Tell me about your project"
                rows="5"
                required
                class="w-full px-0 py-3 bg-transparent border-0 border-b border-warm-300 dark:border-dark-300 focus:border-warm-700 dark:focus:border-dark-700 focus:outline-none text-warm-900 dark:text-dark-900 placeholder-warm-500 dark:placeholder-dark-500 resize-none transition-colors"
              ></textarea>
            </div>
          </div>

          <div class="pt-4">
            <button
              type="submit"
              class="text-warm-900 dark:text-dark-900 hover:text-warm-700 dark:hover:text-dark-700 transition-colors underline underline-offset-4 font-medium"
            >
              Send Message
            </button>
          </div>

          <!-- Hidden fields for better form handling -->
          <input type="hidden" name="_language" value="en" />
          <input type="hidden" name="_subject" value="New Inquiry from jmsugawara.com" />
        </form>
      </div>

      <!-- Project information -->
      <div class="mt-16 pt-8 border-t border-warm-300 dark:border-dark-300">
        <h2 class="text-lg font-medium text-warm-900 dark:text-dark-900 mb-4">Project Information</h2>
        <div class="space-y-3 text-warm-700 dark:text-dark-700 text-sm">
          <p>When contacting me, it's helpful to provide the following information:</p>
          <ul class="text-warm-600 dark:text-dark-600 space-y-1 ml-4 list-disc">
            <li>Type of text (literary, academic, business, etc.)</li>
            <li>Source and target language</li>
            <li>Approximate word or page count</li>
            <li>Timeline or deadline requirements</li>
            <li>Special requirements or preferences</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
