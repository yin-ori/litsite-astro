---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { useTranslations } from '@/utils/i18n';

const locale = 'de';
const t = useTranslations(locale);

const title = t('home.title');
const description = t('home.description');
---

<BaseLayout
  title={title}
  description={description}
  locale={locale}
  keywords={['übersetzung', 'lektorat', 'deutsch', 'japanisch', 'literarisch', 'akademisch']}
>
  <div class="min-h-screen bg-warm-50 dark:bg-dark-50">
    <div class="max-w-2xl mx-auto px-6 py-16">
      <!-- Simple, clean introduction inspired by thought-lite -->
      <div class="mb-16">
        <h1 class="text-2xl font-medium text-warm-900 dark:text-dark-900 mb-6">LitSite</h1>
        <p class="text-warm-700 dark:text-dark-700 leading-relaxed mb-8">
          Professionelle Übersetzungs- und Lektoratsdienstleistungen für literarische und akademische Texte.
        </p>
        <p class="text-warm-700 dark:text-dark-700 leading-relaxed">
          Spezialisiert auf das Sprachpaar Deutsch-Japanisch mit Fokus auf Präzision und kulturelle Nuancen.
        </p>
      </div>

      <!-- Simple navigation links -->
      <div class="space-y-3 text-warm-700 dark:text-dark-700">
        <div>
          <a href="/de/about" class="hover:text-hover-light dark:hover:text-hover-dark transition-colors underline underline-offset-4">
            Unser Ansatz
          </a>
        </div>
        <div>
          <a href="/de/services" class="hover:text-hover-light dark:hover:text-hover-dark transition-colors underline underline-offset-4">
            Unsere Leistungen
          </a>
        </div>
        <div>
          <a href="/de/blog" class="hover:text-hover-light dark:hover:text-hover-dark transition-colors underline underline-offset-4">
            Einblicke und Gedanken
          </a>
        </div>
        <div>
          <a href="/de/contact" class="hover:text-hover-light dark:hover:text-hover-dark transition-colors underline underline-offset-4">
            Kontakt
          </a>
        </div>
      </div>

      <!-- Subtle call-to-action -->
      <div class="mt-16 pt-8 border-t border-warm-300 dark:border-dark-300">
        <p class="text-warm-600 dark:text-dark-600 text-sm">
          Bereit, Ihr Projekt zu starten?
          <a href="/de/contact" class="text-warm-900 dark:text-dark-900 hover:text-hover-light dark:hover:text-hover-dark transition-colors underline underline-offset-4 ml-1">
            Kontakt aufnehmen
          </a>
        </p>
      </div>
    </div>
  </div>
</BaseLayout>