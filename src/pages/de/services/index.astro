---
import ServicesOverviewTemplate from '@/components/templates/ServicesOverviewTemplate.astro';
import { useTranslations } from '@/utils/i18n';

const locale = 'de';
const t = useTranslations(locale);

const title = t('services.title');
const description = t('services.description');

const services = [
  {
    title: 'Forschungsberatung',
    description: 'Professionelle Beratung für Forschungsprojekte in den Bereichen Linguistik, Kulturwissenschaften und interkulturelle Studien zwischen Deutschland und Japan.',
    link: '/de/services/workshop',
    linkText: 'Mehr zur Forschungsberatung'
  },
  {
    title: 'Lektorat',
    description: 'Umfassende Korrekturlese- und Lektoratsdienste, um sicherzustellen, dass deine übersetzten Texte einen natürlichen Fluss bewahren und gleichzeitig Genauigkeit und kulturelle Authentizität erhalten bleiben.',
    link: '/de/services/proofreading',
    linkText: 'Mehr zum Lektorat'
  },
  {
    title: 'Übersetzung',
    description: 'Professionelle Übersetzungsdienstleistungen zwischen Deutsch und Japanisch, spezialisiert auf literarische und akademische Texte, die kulturelle Sensibilität und sprachliche Präzision erfordern.',
    link: '/de/services/translation',
    linkText: 'Mehr zur Übersetzung'
  }
];
---

<ServicesOverviewTemplate
  title={title}
  description={description}
  locale={locale}
  keywords={['dienstleistungen', 'übersetzung', 'lektorat', 'forschungsberatung', 'deutsch', 'japanisch']}
  pageTitle="Angebot"
  subtitle="Sprachdienstleistungen, die auf deine spezifischen Bedürfnisse zugeschnitten sind."
  services={services}
  ctaText="Bereit, dein Projekt zu starten?"
  ctaLink="/de/contact"
  ctaLinkText="Kontakt aufnehmen"
/>