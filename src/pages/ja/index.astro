---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { useTranslations } from '@/utils/i18n';

const locale = 'ja';
const t = useTranslations(locale);

const title = t('home.title');
const description = t('home.description');
---

<BaseLayout
  title={title}
  description={description}
  locale={locale}
  keywords={['翻訳', '校正', 'ドイツ語', '日本語', '文学', '学術']}
>
  <div class="min-h-screen bg-warm-50 dark:bg-dark-50">
    <div class="max-w-2xl mx-auto px-6 py-16">
      <!-- Simple, clean introduction -->
      <div class="mb-16">
        <h1 class="text-2xl font-medium text-warm-900 dark:text-dark-900 mb-6">LitSite</h1>
        <p class="text-warm-700 dark:text-dark-700 leading-relaxed mb-8">
          文学・学術テキストのプロフェッショナル翻訳・校正サービス
        </p>
        <p class="text-warm-600 dark:text-dark-600 leading-relaxed">
          ドイツ語と日本語間の翻訳を専門とし、正確性と文化的ニュアンスに重点を置いています。
        </p>
      </div>

      <!-- Simple navigation links -->
      <div class="space-y-3 text-warm-700 dark:text-dark-700">
        <div>
          <a href="/ja/about" class="hover:text-warm-900 dark:hover:text-dark-900 transition-colors underline underline-offset-4">
            私たちのアプローチについて
          </a>
        </div>
        <div>
          <a href="/ja/services" class="hover:text-warm-900 dark:hover:text-dark-900 transition-colors underline underline-offset-4">
            提供サービス
          </a>
        </div>
        <div>
          <a href="/ja/blog" class="hover:text-warm-900 dark:hover:text-dark-900 transition-colors underline underline-offset-4">
            洞察と考察
          </a>
        </div>
        <div>
          <a href="/ja/contact" class="hover:text-warm-900 dark:hover:text-dark-900 transition-colors underline underline-offset-4">
            お問い合わせ
          </a>
        </div>
      </div>

      <!-- Subtle call-to-action -->
      <div class="mt-16 pt-8 border-t border-warm-300 dark:border-dark-300">
        <p class="text-warm-600 dark:text-dark-600 text-sm">
          プロジェクトを始める準備はできましたか？
          <a href="/ja/contact" class="text-warm-900 dark:text-dark-900 hover:text-warm-700 dark:hover:text-dark-700 transition-colors underline underline-offset-4 ml-1">
            お問い合わせください
          </a>
        </p>
      </div>
    </div>
  </div>
</BaseLayout>