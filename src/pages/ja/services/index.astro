---
import ServicesOverviewTemplate from '@/components/templates/ServicesOverviewTemplate.astro';
import { useTranslations } from '@/utils/i18n';

const locale = 'ja';
const t = useTranslations(locale);

const title = t('services.title');
const description = t('services.description');

const services = [
  {
    title: '翻訳',
    description: 'ドイツ語と日本語間のプロフェッショナル翻訳サービス。文化的感受性と言語的精密性が必要な文学・学術テキストを専門としています。',
    link: '/ja/services/translation',
    linkText: '翻訳について詳しく'
  },
  {
    title: '校正',
    description: '翻訳されたテキストが正確性と文化的真正性を保持しながら自然な流れを維持するための包括的な校正・編集サービス。',
    link: '/ja/services/proofreading',
    linkText: '校正について詳しく'
  },
  {
    title: '研究コンサルティング',
    description: '言語学、文化研究、ドイツ・日本間の異文化研究分野における研究プロジェクトのための専門的なコンサルティング。',
    link: '/ja/services/research',
    linkText: '研究コンサルティングについて詳しく'
  }
];
---

<ServicesOverviewTemplate
  title={title}
  description={description}
  locale={locale}
  keywords={['サービス', '翻訳', '校正', '研究コンサルティング', 'ドイツ語', '日本語']}
  pageTitle="サービス"
  subtitle="お客様の特定のニーズに合わせた包括的な言語サービス。"
  services={services}
  ctaText="プロジェクトを開始する準備はできましたか？"
  ctaLink="/ja/contact"
  ctaLinkText="お問い合わせ"
/>